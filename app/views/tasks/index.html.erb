<% provide(:title, @user.name) %>

<h1><%= @user.name %>のタスクの一覧</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= link_to "タスク新規作成", "#", class: "btn btn-lg btn-primary pull-right" %>
    <table class="table table-hovver" id="table-tasks">
      <thead>
        <tr>
          <th>名称</th>
          <th>作成日</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name, "#", id="task-name" %></td>
          <td><%= task.created_at %></td>
          <td>
            <%= link_to '編集', edit_task_path(task), class: 'btn btn-success' %>
          </td>
          <td>
            <%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除します。よろしいですか？' }, class: 'btn btn-danger' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>